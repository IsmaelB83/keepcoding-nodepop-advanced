<!DOCTYPE html>
<html>
  <!-- HEAD -->
  <head>
    <% include ../partials/head %>
  </head>
  <!-- BODY -->      
  <body>
    <!-- Header -->
    <header>
      <%- include('../partials/header', {active:'home'}) %>
    </header>
    <!-- Main -->           
    <main class='container mt-5'>
      <div class='row'>
        <div class='col-12 text-center my-4'>
          <a href='/'><%=__('Back')%> </a>
        </div>
      </div>
      <div class='row justify-content-center'>
        <div class='col-xs-12 col-sm-6 col-lg-4 mb-4'>
          <% if (locals.result) { %>
            <%- include('../partials/advert', {advert: result}); %>
          <% } else { %>
            <p class='font-weight-bold'><%=__('Advert with selected ID not found')%></p>
          <% } %>
        </div>
      </div>
    </main>    
    <!-- Footer -->
    <footer class='py-5 bg-dark'>
      <% include ../partials/footer %>
    </footer>
    <!-- Bootstrap js -->
    <% include ../partials/bootstrap %>
  </body>
</html>