<% for(let i=0; i<results.length; i++) { %>
<div class="card">
    <a href="/?venta=<%=results[i].type==='sell'%>">
        <img src="<%= results[i].type === 'buy' ? '/images/static/buy.png' : '/images/static/sell.png' %>" class="card-icon" alt="icon">
    </a>
    <img src="<%= results[i].thumbnail %>" class="card-img-top" alt="...">
    <span class="price"><%= results[i].price.toFixed(2) %> â‚¬</span>
    <div class="card-body text-justify">
        <h5 class="card-title text-uppercase mb-1 font-weight-bold">
        <%= results[i].name %> 
        </h5>
        <p class="card-text text-black-50"><small><%= results[i].description %></small></p>
    </div>
    <div class="card-footer text-muted py-1 px-2">
    <p class="card-text mb-1">
        <% for(let j=0; j<results[i].tags.length; j++) { %>
        <a href="/?tag=<%=results[i].tags[j]%>"><span class="badge badge-<%=results[i].tags[j]%>"><%=results[i].tags[j]%></span></a>
        <% } %>
    </p>
    <a href="/advert/<%=results[i].id%>" class="btn btn-block btn-primary"><%=__('Detail')%></a>
    <small id="passwordHelpInline" class="text-muted">
        <%=__('Advert created')%> <%= moment(results[i].createdAt).fromNow(); %>
    </small>
    </div>
</div>
<% } %>